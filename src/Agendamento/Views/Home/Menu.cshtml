@using Agendamento.Service.Entidades
@{
    string nomeSalao = ViewBag.NomeSalaoSelecionado ?? string.Empty;
    List<Servico> servicos = ViewBag.Servicos ?? new List<Servico>();
}

<div class="col-xs-12 col-sm-12 col-md-12">
    <div class="row mb-3" style="background-color: #14CA92;padding: 1em; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px; color: white;">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align: center;">
            <label style="font-size: 20px;">Nossos serviços</label>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
        <label>Seja bem-vindo(a) ao</label>
        <h3>@nomeSalao</h3>
    </div>
</div>

<div class="row">
    @foreach (var item in servicos.OrderBy(x => x.Nome))
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="service-card mb-3" style="border-left: 5px solid #14CA92;">
                <p class="service-name">@item.Nome</p>
                <div class="service-row">
                    <div class="service-infos">
                        <p class="service-duration">
                            <i class="far fa-clock fa-lg"></i><span>&nbsp; @item.Duracao minutos</span>
                        </p>
                        <p class="service-price">
                            <i class="far fa-credit-card fa-lg"></i><span>&nbsp; @item.Valor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</span>
                        </p>
                    </div>
                    <div class="btn-content-select-service">
                        <a class="service-book-btn book-btn btn btn-success" type="button" asp-controller="Agendamento" asp-action="Reserva" asp-route-idservico="@item.IdServico">
                            <i class="fa fa-calendar-check"></i>&nbsp; Reservar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>